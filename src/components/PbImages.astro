---
import { getImageUrl } from '../js/backend.mjs';
import { Image } from "astro:assets";

const { record, recordImage } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
console.log(imageURL);

---

{imageURL && 
    <Image
        src={imageURL}
        alt={record.nomMaison || 'Image'}
        width={record.imageWidth || 300} height={record.imageHeight || 200}
    />
}